<SensitivityAnalysis>
  
  <!-- Discount curve shifts -->
  <DiscountCurve>
    <Currencies><!-- optional selection, default to sim market settings -->
      <Currency>EUR</Currency>
      <Currency>USD</Currency>
      <Currency>GBP</Currency>
      <Currency>JPY</Currency>
      <Currency>CHF</Currency>
    </Currencies>
    <Domain>Par</Domain>
    <ShiftType>Absolute</ShiftType>
    <ShiftSize>0.0001</ShiftSize>
    <ShiftTenors>6M,1Y,2Y,3Y,5Y,7Y,10Y,15Y,20Y</ShiftTenors>
    <Label>YIELD_DISCOUNT</Label>

    <ParConversion><!-- required if Domain = Par -->
      <!--<Instruments>DEP,IRS,IRS,IRS,IRS,IRS,IRS,IRS,IRS</Instruments>--><!-- DEP, FRA, IRS, OIS -->
      <Instruments>OIS,OIS,OIS,OIS,OIS,OIS,OIS,OIS,OIS</Instruments><!-- DEP, FRA, IRS, OIS -->
      <SingleCurve>true</SingleCurve>
      <Conventions><!-- key is currency, instrument type -->
	<Convention id="EUR,DEP">EUR-EURIBOR-CONVENTIONS</Convention>
	<Convention id="EUR,IRS">EUR-6M-SWAP-CONVENTIONS</Convention>
	<Convention id="EUR,OIS">EUR-OIS-CONVENTIONS</Convention>
	<Convention id="USD,DEP">USD-LIBOR-CONVENTIONS</Convention>
	<Convention id="USD,IRS">USD-3M-SWAP-CONVENTIONS</Convention>
	<Convention id="USD,OIS">USD-OIS-CONVENTIONS</Convention>
	<Convention id="GBP,DEP">GBP-DEPOSIT</Convention>
	<Convention id="GBP,IRS">GBP-6M-SWAP-CONVENTIONS</Convention>
	<Convention id="GBP,OIS">GBP-OIS-CONVENTIONS</Convention>
	<Convention id="JPY,DEP">JPY-LIBOR-CONVENTIONS</Convention>
	<Convention id="JPY,IRS">JPY-LIBOR-6M-SWAP-CONVENTIONS</Convention>
	<Convention id="JPY,OIS">JPY-OIS-CONVENTIONS</Convention>
	<Convention id="CHF,DEP">CHF-LIBOR-CONVENTIONS</Convention>
	<Convention id="CHF,IRS">CHF-6M-SWAP-CONVENTIONS</Convention>
	<Convention id="CHF,OIS">CHF-OIS-CONVENTIONS</Convention>
      </Conventions>
    </ParConversion>
  </DiscountCurve>
  
  <!-- Index curve shifts -->
  <IndexCurve>
    <IndexNames><!-- optional selection -->
      <Index>EUR-EURIBOR-6M</Index>
     <Index>EUR-EURIBOR-3M</Index>
      <Index>EUR-EONIA</Index>
    <Index>USD-LIBOR-3M</Index>
      <Index>USD-LIBOR-6M</Index>
      <Index>GBP-LIBOR-6M</Index>
      <Index>GBP-LIBOR-3M</Index>
      <Index>CHF-LIBOR-6M</Index>
      <Index>JPY-LIBOR-6M</Index>
    </IndexNames>
    <Domain>Par</Domain>
    <ShiftType>Absolute</ShiftType>
    <ShiftSize>0.0001</ShiftSize>
    <ShiftTenors>6M,1Y,2Y,3Y,5Y,7Y,10Y,15Y,20Y</ShiftTenors>
    <Label>YIELD_INDEX</Label>
    <ParConversion><!-- required if Domain = Par -->
      <Instruments>DEP,IRS,IRS,IRS,IRS,IRS,IRS,IRS,IRS</Instruments><!-- DEP, FRA, IRS, OIS -->
      <SingleCurve>false</SingleCurve>
      <Conventions><!-- key is currency, instrument type -->
	<Convention id="EUR,DEP">EUR-EURIBOR-CONVENTIONS</Convention>
	<Convention id="EUR,IRS">EUR-6M-SWAP-CONVENTIONS</Convention>
	<Convention id="EUR,OIS">EUR-OIS-CONVENTIONS</Convention>
	<Convention id="USD,DEP">USD-LIBOR-CONVENTIONS</Convention>
	<Convention id="USD,IRS">USD-3M-SWAP-CONVENTIONS</Convention>
	<Convention id="GBP,DEP">GBP-DEPOSIT</Convention>
	<Convention id="GBP,IRS">GBP-6M-SWAP-CONVENTIONS</Convention>
	<Convention id="JPY,DEP">JPY-LIBOR-CONVENTIONS</Convention>
	<Convention id="JPY,IRS">JPY-LIBOR-6M-SWAP-CONVENTIONS</Convention>
	<Convention id="CHF,DEP">CHF-LIBOR-CONVENTIONS</Convention>
	<Convention id="CHF,IRS">CHF-6M-SWAP-CONVENTIONS</Convention>
      </Conventions>
    </ParConversion>
    </IndexCurve>
  
  <!-- FX spot shifts -->
  <FxSpot>
    <ShiftType>Relative</ShiftType>
    <ShiftSize>0.01</ShiftSize>
    <Label>FX</Label>
  </FxSpot>
  
  <!-- FX ATM vol shifts -->
  <FxVolatility>
    <ShiftType>Relative</ShiftType>
    <ShiftSize>0.01</ShiftSize>
    <ShiftExpiries>1Y,2Y,3Y,5Y</ShiftExpiries>
    <ShiftStrikes/>
    <Label>VOL_FX</Label>
  </FxVolatility>
  
  <!-- Swaption ATM vol shifts -->
  <SwaptionVolatility>
    <ShiftType>Relative</ShiftType>
    <ShiftSize>0.01</ShiftSize>
    <ShiftExpiries>1Y,5Y,7Y,10Y</ShiftExpiries>
    <ShiftTerms>1Y,5Y,10Y</ShiftTerms>
    <ShiftStrikes/>
    <Label>VOL_SWAPTION</Label>
  </SwaptionVolatility>
  
  <!-- Cap/Floor (Optionlet) vol surface shifts -->
  <CapFloorVolatility>
    <Domain>Optionlet</Domain>
    <ShiftType>Relative</ShiftType>
    <ShiftSize>0.01</ShiftSize>
    <ShiftExpiries>1Y,2Y,3Y,5Y,7Y,10Y</ShiftExpiries>
    <ShiftStrikes>0.05</ShiftStrikes>
    <Label>VOL_CAPFLOOR</Label>
  </CapFloorVolatility>
  
  <!-- Cross Gamma filter: Pairs of factor sub-strings -->
  <CrossGammaFilter>
    <Pair>DISOUNT/EUR,DISCOUNT/EUR</Pair>
    <Pair>INDEX/EUR,INDEX/EUR</Pair>
    <Pair>DISCOUNT/EUR,INDEX/EUR</Pair>      
  </CrossGammaFilter>
  
</SensitivityAnalysis>
